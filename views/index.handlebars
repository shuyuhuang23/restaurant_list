<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">

                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">

                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." aria-describedby="search-button" value={{ keyword }}>

                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>

                    <div class="ml-1">
                        <input type="text" class="form-control" name="sort" id="sort" list="sortOptions"
                            placeholder="sort" value={{ sort }}>
                        <datalist id="sortOptions">
                            <option>A->Z</option>
                            <option>Z->A</option>
                            <option>類別</option>
                            <option>地區</option>
                            <option>評分</option>
                        </datalist>
                    </div>

                </div>



            </form>

            <div class="text-right">
                <a href="./restaurants/new">
                    <button class="btn btn-primary btn-sm mt-2">新增餐廳</button>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">
                {{#each restaurants}}
                <a href="./restaurants/{{ this._id }}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{ this.name }}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                            </div>

                            <span class="badge badge-pill badge-danger font-weight-normal">
                                {{ this.rating }}
                                <i class="fas fa-star fa-xs"></i>
                            </span>

                        </div>

                        <div class="card-footer d-flex justify-content-end flex-wrap">
                            <a href="./restaurants/{{ this._id }}/edit"><button class="btn btn-link">Edit</button></a>
                            <a href="./restaurants/{{ this._id }}"><button class="btn btn-link">Details</button></a>
                            <form action="./restaurants/{{ this._id }}/delete" method="POST">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>

                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>